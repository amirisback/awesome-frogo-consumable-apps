<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frogoRvColorWhite">

    <com.frogobox.recycler.FrogoRecyclerView
        android:id="@+id/rv_sport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/frogo_rv_dimen_8dp"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/frogo_rv_dimen_16dp"
        tools:listitem="@layout/list_news_article_vertical" />

    <com.frogobox.recycler.FrogoRecyclerView
        android:id="@+id/rv_leagues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_sport"
        android:clipToPadding="false"
        android:paddingTop="@dimen/frogo_rv_dimen_16dp"
        tools:listitem="@layout/list_news_article_vertical" />

    <ProgressBar
        android:id="@+id/progress_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>